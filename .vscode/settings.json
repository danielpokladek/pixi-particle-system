{
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cSpell.words": [
        "AARRGGBB",
        "danielpokladek",
        "lerp",
        "pixijs",
        "Pokladek",
        "RRGGBB",
        "Tweenable",
        "webgl"
    ]
}
